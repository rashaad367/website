<%- include('../partials/meta.ejs') %>
    <title>Event details</title>

    <link rel='stylesheet' href='/css/event.css'>
    <%- include('../partials/header.ejs') %>
        <main class="container">
            <div class="row">
                <div class="col-*-auto">
                    <section id="event-section">
                        <div class="d-flex mt-5" id="pg-main-header">
                            <h3 id="pg-header">
                                <%=event.title%>
                            </h3>
                        </div>
                        <div class="d-flex align-items-center">
                            <span>Going?</span>
                            <form action="/events/<%= event.id %>/rsvp" method="POST" class="me-2">
                                <button type="submit" class="btn btn-outline-primary btn-sm mx-3" id="status"
                                    name="status" value="YES">
                                    Yes
                                </button>
                            </form>
                            <form action="/events/<%= event.id %>/rsvp" method="POST" class="me-2">
                                <button type="submit" class="btn btn-outline-primary btn-sm me-3" id="status"
                                    name="status" value="NO">
                                    No
                                </button>
                            </form>
                            <form action="/events/<%= event.id %>/rsvp" method="POST" class="me-2">
                                <button type="submit" class="btn btn-outline-primary btn-sm" id="status" name="status"
                                    value="MAYBE">Maybe</button>
                            </form>
                        </div>
                        <div class="d-flex">
                            <div id="picture"><img src="<%= event.image%>" alt="event" class="img-fluid"
                                    id="event-picture" width="244px" height="180px">
                            </div>
                            <div id="pg-main-text">
                                <ul id="pg-main-list">
                                    <li class="d-flex mb-1">
                                        <p><b>Host:</b>
                                            <%= event.hostName.firstName + ' ' + event.hostName.lastName %>
                                        </p>
                                    </li>
                                    <li class="d-flex mb-1">
                                        <p><b>Date and time:</b>
                                            <% if (event.startDate && event.endDate) { %>
                                                <%= event.startDate.toLocaleString() %> - <%=
                                                        event.endDate.toLocaleString() %>
                                                        <% } %>
                                        </p>
                                    </li>
                                    <li class="d-flex mb-1">
                                        <p><b>Location:</b>
                                            <%= event.location %>
                                        </p>
                                    </li>
                                    <li class="d-flex mb-1">
                                        <p><b>Details:</b>
                                            <%= event.details %>
                                        </p>
                                    </li>
                                    <li class="d-flex mb-1">
                                        <p><b>Category:</b>
                                            <%= event.category.charAt(0).toUpperCase() + event.category.slice(1) %>
                                        </p>
                                    </li>
                                    <li class="d-flex">
                                        <p><b>Number of rsvps:</b>
                                            <%= count%>
                                        </p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </main>
        </div>
        <%- include('../partials/footer.ejs') %>