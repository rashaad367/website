<!DOCTYPE html>
<!--Awesome Font Kit-->
<script src="https://kit.fontawesome.com/72abb84275.js" crossorigin="anonymous"></script>

<!--Bootstrap-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
</head>

<!--Allows the closing of flash messages-->
<script src="/javascript/closeFlash.js"></script>

<body>
    <header class="custom-bg container-fluid">
        <div class="row">
            <div class="col-*-auto">
                <nav class="d-flex justify-content-between mx-5" id="nav1">
                    <a href="/"><img src="/images/te-logos-cropped.jpeg" alt="logo" class="img-fluid"
                            id="logo-image"></a>
                    <ul class="list-inline my-auto" id="nav1-options">
                        <ul class="list-inline my-auto" id="nav1-options">
                            <% if (!user) { %>
                                <li class="list-inline-item me-4"><a href="/users/new">Sign up</a></li>
                                <li class="list-inline-item"><a href="/users/login">Login</a></li>
                                <% } else { %>
                                    <li class="list-inline-item me-4"><a href="/events/new">New Event</a></li>
                                    <li class="list-inline-item me-4"><a href="/users/profile">
                                            <%= name %>'s Profile
                                        </a></li>
                                    <li class="list-inline-item me-4"><a href="/users/logout">Logout</a></li>
                                    <% } %>
                        </ul>
                    </ul>
                </nav>
                <hr class="mx-auto d-block">
                <nav class="d-flex mx-5" id="nav2">
                    <a href="/events" id="event-label">Events</a>
                </nav>
            </div>
        </div>
    </header>
    <div class="content">


        <% if(errorMessages.length> 0) {%>
            <% errorMessages.forEach(message=>{%>
                <div class='flash-message error'>
                    <%=message%>
                        <i class="fa-solid fa-x"></i>
                </div>
                <%});%>
                    <%}%>

                        <% if(successMessages.length> 0) {%>

                            <% successMessages.forEach(message=>{%>
                                <div class='flash-message success'>
                                    <%=message%>
                                        <i class="fa-solid fa-x"></i>
                                </div>
                                <%});%>
                                    <%}%>