<%- include('../partials/meta.ejs') %>
    <title>Profile</title>

    <link rel='stylesheet' href='/css/index.css'>
    <%- include('../partials/header.ejs') %>
        <main class="container">
            <div class="col-sm-14 col-md-13 col-lg-12 col-xl-11">
                <h2>Welcome, <%= user.firstName + ' ' + user.lastName%>
                </h2>
                <% if (events.length) { %>
                    <div class="row">
                        <p>You have created the following events:</p>
                        <% events.forEach(event=> { %>
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <div class="card-body d-flex justify-content-between">
                                        <div class="title">
                                            <h5 class="card-title">
                                                <a href="/events/<%= event.id %>">
                                                    <%= event.title %>
                                                </a>
                                            </h5>
                                        </div>
                                        <div class="card-divider"></div>
                                        <div class="actions d-flex">
                                            <form action="/events/<%= event.id %>/edit" method="GET" class="me-2">
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </button>
                                            </form>
                                            <form action="/events/<%= event.id %>?_method=DELETE" method="POST">
                                                <button type="submit" class="btn btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this event?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } else { %>
                        <p>You have not created any events.</p>
                        <% } %>

                            <% if (rsvps.length) { %>
                                <div class="row">
                                    <p>You have set the following rsvps:</p>
                                    <% rsvps.forEach(rsvp=> { %>
                                        <div class="col-md-4 mb-4">
                                            <div class="card">
                                                <div class="card-body d-flex justify-content-between">
                                                    <div class="title">
                                                        <h5 class="card-title">
                                                            <a href="/events/<%= rsvp.event.id %>">
                                                                <%= rsvp.event.title %>
                                                            </a>
                                                        </h5>
                                                    </div>
                                                    <div class="card-divider"></div>
                                                    <div class="going d-flex">
                                                        <h5>
                                                            Status: <%= rsvp.status%>
                                                        </h5>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                                <% } else { %>
                                    <p>You have not set any rsvps.</p>
                                    <% } %>

            </div>
        </main>
        </div>
        <%- include('../partials/footer.ejs') %>